// Крок 3: Створення першого Activity (MainActivity) 

//Створив новий файл MainActivity.kt: 

import android.content.Intent
import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.Button
import android.widget.ImageView
import android.widget.TextView

class MainActivity : AppCompatActivity() {

    private lateinit var imageViewCat: ImageView
    private lateinit var textViewCatName: TextView
    private lateinit var textViewCatDescription: TextView
    private lateinit var buttonCatDetails: Button

    private lateinit var imageViewDog: ImageView
    private lateinit var textViewDogName: TextView
    private lateinit var textViewDogDescription: TextView
    private lateinit var buttonDogDetails: Button

    private lateinit var imageViewRabbit: ImageView
    private lateinit var textViewRabbitName: TextView
    private lateinit var textViewRabbitDescription: TextView
    private lateinit var buttonRabbitDetails: Button

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        // Cat Section
        imageViewCat = findViewById(R.id.imageViewCat)
        textViewCatName = findViewById(R.id.textViewCatName)
        textViewCatDescription = findViewById(R.id.textViewCatDescription)
        buttonCatDetails = findViewById(R.id.buttonCatDetails)

        val cat = Animal("Cat", R.drawable.cat, "Description of the cat.")

        imageViewCat.setImageResource(cat.imageResId)
        textViewCatName.text = cat.name
        textViewCatDescription.text = cat.description

        buttonCatDetails.setOnClickListener {
            navigateToAnimalDetails(cat)
        }

        // Dog Section
        imageViewDog = findViewById(R.id.imageViewDog)
        textViewDogName = findViewById(R.id.textViewDogName)
        textViewDogDescription = findViewById(R.id.textViewDogDescription)
        buttonDogDetails = findViewById(R.id.buttonDogDetails)

        val dog = Animal("Dog", R.drawable.dog, "Description of the dog.")

        imageViewDog.setImageResource(dog.imageResId)
        textViewDogName.text = dog.name
        textViewDogDescription.text = dog.description

        buttonDogDetails.setOnClickListener {
            navigateToAnimalDetails(dog)
        }

        // Rabbit Section
        imageViewRabbit = findViewById(R.id.imageViewRabbit)
        textViewRabbitName = findViewById(R.id.textViewRabbitName)
        textViewRabbitDescription = findViewById(R.id.textViewRabbitDescription)
        buttonRabbitDetails = findViewById(R.id.buttonRabbitDetails)

        val rabbit = Animal("Rabbit", R.drawable.rabbit, "Description of the rabbit.")

        imageViewRabbit.setImageResource(rabbit.imageResId)
        textViewRabbitName.text = rabbit.name
        textViewRabbitDescription.text = rabbit.description

        buttonRabbitDetails.setOnClickListener {
            navigateToAnimalDetails(rabbit)
        }
    }

    private fun navigateToAnimalDetails(animal: Animal) {
        val intent = Intent(this, AnimalDetailsActivity::class.java)
        intent.putExtra("animal", animal)
        startActivity(intent)
    }
}


// Крок 4: Створення другого Activity (AnimalDetailsActivity) 

Створив новий файл AnimalDetailsActivity.kt: 

import android.os.Bundle
import androidx.appcompat.app.AppCompatActivity
import android.widget.ImageView
import android.widget.TextView

class AnimalDetailsActivity : AppCompatActivity() {

    private lateinit var imageViewDetails: ImageView
    private lateinit var textViewDetailsName: TextView
    private lateinit var textViewDetailsDescription: TextView

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_animal_details)

        imageViewDetails = findViewById(R.id.imageViewDetails)
        textViewDetailsName = findViewById(R.id.textViewDetailsName)
        textViewDetailsDescription = findViewById(R.id.textViewDetailsDescription)

        val animal: Animal = intent.getSerializableExtra("animal") as Animal

        imageViewDetails.setImageResource(animal.imageResId)
        textViewDetailsName.text = animal.name
        textViewDetailsDescription.text = animal.description
    }
}

 
