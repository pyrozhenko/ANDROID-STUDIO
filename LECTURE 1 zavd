// Оголошення інтерфейсу ПодатиГолос 

interface ПодатиГолос { 

    fun голосГучний(): String 

    fun голосТихий(): String 

} 

  

// Оголошення класу Тварина (Animal) 

open class Тварина(var ім'я: String) { 

    private var вік: Int = 0 

  

    fun встановитиВік(новийВік: Int) { 

        вік = новийВік 

    } 

  

    open fun податиІнформацію(): String { 

        return "Ім'я: $ім'я, Вік: $вік років" 

    } 

} 

  

// Оголошення класу Собака, який розширює клас Тварина і реалізує інтерфейс ПодатиГолос 

class Собака(ім'я: String) : Тварина(ім'я), ПодатиГолос { 

    override fun голосГучний(): String { 

        return "Гав-гав!" 

    } 

  

    override fun голосТихий(): String { 

        return "Тихо гавкає" 

    } 

} 

  

// Оголошення класу Птиця, який розширює клас Тварина і реалізує інтерфейс ПодатиГолос 

class Птиця(ім'я: String) : Тварина(ім'я), ПодатиГолос { 

    override fun голосГучний(): String { 

        return "Чирик-чирик!" 

    } 

  

    override fun голосТихий(): String { 

        return "Тихо співає" 

    } 

} 

  

// Оголошення класу Риба, який розширює клас Тварина (не реалізує інтерфейс ПодатиГолос) 

class Риба(ім'я: String) : Тварина(ім'я) 

  

fun main() { 

    // Створення екземплярів класів та виклик їх функцій та змінних 

    val собака = Собака("Барбос") 

    собака.встановитиВік(3) 

    println(собака.податиІнформацію()) 

    println(собака.голосГучний()) 

    println(собака.голосТихий()) 

  

    val птиця = Птиця("Джеральд") 

    птиця.встановитиВік(2) 

    println(птиця.податиІнформацію()) 

    println(птиця.голосГучний()) 

    println(птиця.голосТихий()) 

  

    val риба = Риба("Немо") 

    риба.встановитиВік(1) 

    println(риба.податиІнформацію()) 

    // Клас Риба не має функцій голосГучний() та голосТихий(), бо не реалізує інтерфейс ПодатиГолос 

} 
